<h1 class="mb-5 text-center">Créer un événement</h1>

<div class="form-group container" style="width: 30rem;">
  <%= form_tag events_path, method: "post" do %>

  <%= label_tag 'Titre' %>
  <%= text_field_tag 'title', @event.title, class: "form-control mb-2" %>

  <%= label_tag 'Description' %>
  <%= text_area_tag 'description', @event.description, class: "form-control mb-2" %>

  <%= label_tag 'Ville' %>
  <%= text_field_tag 'location', @event.location, class: "form-control mb-2" %>
 
  <%= label_tag "Date de début de l'évènement" %>
  <%= datetime_field_tag 'start_date', @event.start_date, class: "form-control mb-2" %>

  <%= label_tag "Durée (minutes)" %>
  <%= number_field_tag 'duration', @event.duration, class: "form-control mb-2" %>
 
  <%= label_tag 'Tarif' %>
  <%= number_field_tag 'price', @event.price, class: "form-control mb-2" %>

  <%= submit_tag "Créer", class: "form-control btn btn-primary" %>

  <% end %>
</div>